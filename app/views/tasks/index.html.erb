<div class="container">
  <h1>Tasks</h1>
  <div class="cards">
    <% @tasks.each do |task| %>
      <div class="task">
        <input type="checkbox" <%= "checked" if task.completed %> />
        <span><%= link_to task.title, task_path(task) %>
        <a href="" data-turbo-method='delete'></a>
        <%= link_to task_path(task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" } do %>
        <i class="fas fa-trash"></i></span>
       <% end %>
      </div>

    <% end %>
    <%= link_to "Add a new task", new_task_path %>
  </div>
</div>
